    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "module": "nodenext",
    "target": "ES2022",

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "test"
  ]
}
